<div class="container">

	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<header class="card-header">
					<a href="/users/login" class="float-right btn btn-outline-primary mt-1">Log in</a>
					<h1 class="card-title mt-2">Registration</h1>
				</header>
				<article class="card-body">
					<form method="POST" id="register">
						<div class="form-row">
							<div class="col form-group">
								<label for="firstName">First name </label>
								<input type="text" id="firstName" class="form-control" placeholder="" name="firstName"
									value="{{user.firstName}}" required>
							</div> <!-- form-group end.// -->
							<div class="col form-group">
								<label for="lastName">Last name</label>
								<input type="text" id="lastName" class="form-control" placeholder="" name="lastName"
									value="{{user.lastName}}" required>
							</div> <!-- form-group end.// -->
						</div> <!-- form-row end.// -->
						<div class="form-group">
							<label for="email">Email address</label>
							<input type="email" id="email" class="form-control" placeholder="" name="email"
								value="{{user.email}}" required>
							<small class="form-text text-muted">We'll never share your email with anyone else.</small>
						</div> <!-- form-group end.// -->
						<div class="form-group">
							<label class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="gender" value="Male" checked>
								<span class="form-check-label"> Male</span>
							</label>
							<label class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="gender" value="Female">
								<span class="form-check-label"> Female</span>
							</label>
							<label class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="gender" value="Other">
								<span class="form-check-label"> Other</span>
							</label>
						</div> <!-- form-group end.// -->
						<div class="form-group">
							<label for="password">Password</label>
							<input class="form-control" id="password" type="password" name="password" required>
						</div> <!-- form-group end.// -->
						<div class="form-group">
							<label for="confirmPassword">Confirm Password</label>
							<input class="form-control" id="confirmPassword" type="password" name="passwordConfirm"
								required>
						</div> <!-- form-group end.// -->
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block"> Register </button>
						</div> <!-- form-group// -->

						{{#if errors}}
						<ul class="text-danger">
							{{#each errors}}
							<li>{{this}}</li>
							{{/each}}
						</ul>
						{{/if}}
					</form>
				</article> <!-- card-body end .// -->
				<div class="border-top card-body text-center">Already registered? <a href="/users/login"
						class="register-login-link">Log In</a>
				</div>
			</div> <!-- card.// -->
		</div> <!-- col.//-->

	</div> <!-- row.//-->


</div>
<!--container end.//-->