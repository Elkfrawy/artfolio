<form id="login-form" action='/users/login' method="POST">
    <label>
        Email
        <input type="text" id="email" name="email" placeholder="email" />
    </label>
    <label>
        Password
        <input type="text" id="password" name="password" placeholder="password" />
    </label>
    <button type="submit">Login</button>
</form>
{{#if hasError}}
<p>{{error}}</p>
{{/if}}