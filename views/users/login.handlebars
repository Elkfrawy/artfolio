<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <header class="card-header">
          <a href="/users/register" class="float-right btn btn-outline-primary mt-1">Registration</a>
          <h1 class="card-title mt-2">Login</h1>
        </header>
        <article class="card-body">
          <form method="POST" id="login">
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" id="email" class="form-control" placeholder="" name="email" value="{{email}}"
                required>
            </div> <!-- form-group end.// -->
            <div class="form-group">
              <label for="password">Password</label>
              <input class="form-control" id="password" type="password" name="password" required minlength="8">
            </div> <!-- form-group end.// -->
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block"> Login </button>
            </div> <!-- form-group// -->

            {{#if errors}}
            <ul class="text-danger">
              {{#each errors}}
              <li>{{this}}</li>
              {{/each}}
            </ul>
            {{/if}}
          </form>
        </article> <!-- card-body end .// -->
        <div class="border-top card-body text-center">Not Registered yet? <a href="/users/register"
            class="register-login-link">Register</a></div>
      </div> <!-- card.// -->
    </div> <!-- col.//-->

  </div> <!-- row.//-->


</div>
<!--container end.//-->