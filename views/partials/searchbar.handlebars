<div class="row justify-content-center my-3">
    <div class="col-12 col-md-10 ">
        <form class="card card-sm" action="/artworks/search">
            <div class="card-body row no-gutters align-items-center">
                <div class="col-auto">
                    <i class="fas fa-search h4 text-body"></i>
                </div>
                <!--end of col-->
                <div class="col">
                    <label for="searchbar" class="visuallyhidden"></label>
                    <input id="searchbar" class="form-control form-control-lg form-control-borderless" type="search"
                        name="query" placeholder="Search for artwork title, category, or artist" required>
                </div>
                <!--end of col-->
                <div class="col-auto">
                    <button class="btn btn-lg btn-success" type="submit">Search</button>
                </div>
                <!--end of col-->
            </div>
        </form>
    </div>
    <!--end of col-->
</div>