<section class="gallery-block cards-gallery">
    <div class="total-display">
        <div class="artfolio-display">
            <div class="heading">
                <h2>{{user.firstName}}'s Artfolio</h2>
            </div>


            {{#if authenticated}}
            <div>
                <form action="/artworks/create" method="GET">
                    <button type="submit" class="btn btn-success">Create New Artwork</button>
                </form>
            </div>
            <br>
            {{/if}}

            <div class="row">
                {{#if authenticated}}
                {{#if artworks}}
                {{#each artworks}}
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 transform-on-hover">
                        <a class="lightbox" href="/artworks/{{_id}}">
                            <img src="{{pictures.[0].pictureUrl}}" alt="Card Image" class="card-img-top">
                        </a>
                        <div class="card-body">
                            <h6><a href="/artworks/{{_id}}">{{title}}</a></h6>
                            <p class="text-muted card-text">{{description}}</p>

                            <button type="button" class="btn btn-danger" data-toggle="modal"
                                data-target="#deleteArtwork"><i class="fa fa-trash"></i>
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="deleteArtwork" tabindex="-1" role="dialog">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Delete Artwork</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete this artwork?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancel</button>

                                            <form action="/artworks/{{_id}}" method="POST">
                                                <input type="hidden" name="_method" value="delete" />
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <form action="/artworks/edit/{{_id}}" method="get">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-edit"></i></button>
                            </form>

                        </div>
                    </div>
                </div>
                {{/each}}
                {{/if}}
                {{else}}

                {{#if artworks}}
                {{#each artworks}}
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 transform-on-hover">
                        <a class="lightbox" href="/artworks/{{_id}}">
                            <img src="{{pictures.[0].pictureUrl}}" alt="Card Image" class="card-img-top">
                        </a>
                        <div class="card-body">
                            <h6><a href="/artworks/{{_id}}">{{title}}</a></h6>
                            <p class="text-muted card-text">{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{/if}}
                {{/if}}
            </div>
        </div>
        <div class="user-info">

            <div class="card border-0">
                {{#if user.userPictureId}}
                <a>
                    <img src="/pictures/content/{{user.userPictureId}}" alt="Card Image" class="card-img-top">
                </a>
                {{/if}}
                <div class="card-body">
                    <h2>{{ user.firstName }} {{ user.lastName}}</h2>
                    <h6>Bio</h6>
                    <p>{{user.biography}}</p>
                    <a class="info-tag">Gender: </a>
                    <a>{{ user.gender }}</a><br>
                    <a class="info-tag">Email: </a> <a>{{ user.email }}</a><br>
                    {{#if user.websiteUrl}}
                    <a class="info-tag">Website: </a>
                    <a href={{user.websiteUrl}} class="personal-link">{{user.websiteUrl}}</a><br>
                    {{/if}}


                    {{#if authenticated}}
                    <a class="info-tag">Address </a>
                    <ul class="info-addr">
                        <li>Street Address: {{user.address.streetAddress}}</li>
                        <li>City: {{user.address.city}}</li>
                        <li>State: {{user.address.state}}</li>
                        <li>Zip Code: {{user.address.zipCode}}</li>
                    </ul>
                    <a class="info-tag">Birthday: </a> <a>{{dateFormat user.birthday "YYYY-MM-DD" true}}</a><br>
                    {{/if}}
                </div>
                {{#if authenticated}}
                <form action="/users/edit" method="get" class="edit-profile">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form><br>
                {{/if}}
            </div>
        </div>
    </div>
</section>